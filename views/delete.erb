<% if @note %>
  <p>The following note is about to be deleted:</p>
  <br />
  <blockquote><%=escape_html @note.content %></blockquote>
  <br />
  <p>Are you sure you would like to proceed?</p>
  <br />
  <form action="/<%= @note.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Yes, Delete it!">
    <a href="/<%= @note.id %>">Cancel</a>
  </form>
<% else %>
  <p>Note not found.</p>
<% end %>
