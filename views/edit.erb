<% if @note %>
  <form action="/<%= @note.id %>" method="post" id="edit">
    <input type="hidden" name="_method" value="put">
    <textarea name="content"><%=escape_html @note.content %></textarea>
    <input type="checkbox" name="complete" <%= "checked" if @note.complete %>>
    <input type="submit" value="Save">
    <input type="reset" value="Discard changes">
    <a href="/<%= @note.id %>/delete">Delete</a>
  </form>
<% else %>
  <p>Note not found.</p>
<% end %>
