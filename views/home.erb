<section id="add">
  <form action="/" method="post">
    <textarea name="content" placeholder="Your note here..."></textarea>
    <input type="submit" value="Take Note!">
  </form>
</section>

<div class="list">
  <% @notes.each do |note| %>
    <article <%= 'class="complete"' if note.complete %>>
      <p>
        <%= note.content %>
        <span><a href="/<%= note.id %>">[edit]</a></span>
      </p>
      <p class="links">
        <a href="/<%= note.id %>/complete">&#8623;</a>
      </p>
      <p class="meta">Created: <%= note.created_at.strftime("%A, %B %e, %Y - %l:%M %P")%></p>
    </article>
  <% end %>
</div>
